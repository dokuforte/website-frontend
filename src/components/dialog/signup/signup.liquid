<div class="dialog dialog-signup" 
     data-controller="dialog--signup"
     data-action="dialogs:hide@document->dialog--signup#hide
                   dialogSignup:show@document->dialog--signup#show
                   dialogSignup:hide@document->dialog--signup#hide"
>
  <div class="dialog__wrapper">
      <div class="button-circular dialog__close"
           data-action="click->dialog--signup#hide"
      >
        {% inlineSVG src:"src/static/images/icons/24/icon-close.svg" class:"button-circular__icon" %}
        <div class="button-circular__label">{{ lang[locale].close }}</div>
      </div>

      <h3 class="dialog__title">{{ lang[locale].signup }}</h3>

      <form class="dialog__form" data-dialog--signup-target="form">
        {% include input/input.liquid 
                   type:"text"
                   name:"first_name"
                   label:lang[locale].first_name
                   stimulus_target:'data-dialog--signup-target="firstName"'
        %}
        {% include input/input.liquid 
                   type:"text"
                   name:"last_name"
                   label:lang[locale].last_name
                   stimulus_target:'data-dialog--signup-target="lastName"'
        %}
        {% include input/input.liquid 
                   type:"email"
                   name:"email"
                   label:lang[locale].email 
                   stimulus_target:'data-dialog--signup-target="email"'
        %}
        {% include input/input.liquid 
                   type:"password"
                   name:"password"
                   label:lang[locale].password
                   stimulus_target:'data-dialog--signup-target="password"'
        %}
        <div class="dialog__row">
          <a href="#" class="dialog__link dialog__link--small" data-dialog--signup-target="checkboxTerms" data-action="dialog--signup#showSigninDialog">{{ lang[locale].signin_long }} â†’</a>
        </div>
        <div class="checkbox-wrapper">
          <input class="checkbox-wrapper__checkbox" type="checkbox" name="terms" id="signup-confirm-terms" data-action="change->dialog--signup#enable">
          <label for="signup-confirm-terms" class="checkbox-wrapper__label">{{ lang[locale].signup_read }} <a href="/{{ locale }}/terms/" class="dialog__link dialog__link--small">{{ lang[locale].terms }}</a></label>
        </div>
        <button class="button button--primary dialog__button" data-dialog--signup-target="submitButton" data-action="dialog--signup#submit" disabled>{{ lang[locale].signup }}</button>
      </form>
  </div>
</div>
