---
layout: auth/auth.liquid
---

<div class="signin-wrapper scrollview" data-controller="scrollview" data-action="scroll->scrollview#handleScroll">
  <div class="signin" data-controller="signin">
    <h1 class="signin__title" data-controller="page-title">{{ lang[locale].signin }}</h1>
    <div class="signin__links signin__links--top">
      <a href="/{{ locale }}/signup" class="link-with-arrow link-with-arrow--small">{{ lang[locale].signup_long }}</a>
    </div>

    <form class="signin__form" data-signin-target="form">
      {% include 'input/input.liquid' type:'text' name:'username' label:lang[locale].username placeholder:lang[locale].username_placeholder stimulus_target:'data-signin-target="userName"' %}
      {% include 'input/input.liquid' type:'password' name:'password' label:lang[locale].password placeholder:"********" stimulus_target:'data-signin-target="password"' %}
      <div class="signin__links">
        <a href="/{{ locale }}/reset-password" class="link-with-arrow link-with-arrow--small">{{ lang[locale].password_forgot }}</a>
      </div>
      <div class="signin__checkboxes">
        <div class="checkbox-wrapper">
          <input class="checkbox-wrapper__checkbox" type="checkbox" required name="remember_me" id="signin-remember-me" data-signin-target="rememberMe">
          <label for="signin-remember-me" class="checkbox-wrapper__label">{{ lang[locale].signin_remember_me }}</label>
        </div>
      </div>
      
      <button class="button button--primary" data-action="signin#submit">{{ lang[locale].signin }}</button>
    </form>
  </div>
</div>
