---
layout: base/base.liquid
hide_search: true
---
{% include header-nav/header-nav.liquid class:'header-nav--transparent header-nav--minimal' %}

<nav class="profile-nav">
  <div class="profile-nav__wrapper">
    <a href="/{{locale}}/profile/edit" class="profile-nav__item {% if permalink contains "edit" %}is-selected{% endif %}">Account</a>
    <a href="/{{locale}}/profile/my-photos" class="profile-nav__item {% if permalink contains "my-photos" %}is-selected{% endif %}">My Photos</a>
    <a href="/{{locale}}/profile/upload" class="profile-nav__item {% if permalink contains "upload" %}is-selected{% endif %}">Upload</a>
    <a href="/{{locale}}/profile/settings" class="profile-nav__item {% if permalink contains "settings" %}is-selected{% endif %}">Settings</a>
    <div class="profile-nav__caption caption">Browse</div>
    <a href="/{{locale}}/photos/" class="profile-nav__item">Photos</a>
    <a href="/{{locale}}/photos/latest" class="profile-nav__item">Latest</a>
  </div>
</nav>

<div class="profile-content scrollview" data-controller="scrollview" data-action="scroll->scrollview#handleScroll">
  <div class="profile-content__wrapper">
    <h2 class="profile-content__title">{{ title }}</h2>
    {{ content }}
  </div>
</div>